<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="styles/global-reset.css" rel="stylesheet" type="text/css" />
<link type="text/css" href="styles/style.css" rel="stylesheet" />
<link href="styles/validate.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="scripts/jquery-1.4.2.min.js"></script>
<script type="text/javascript" src="scripts/simpla.jquery.configuration.js"></script>
<script type="text/javascript" src="scripts/easy_validator.pack.js"></script>
<script type="text/javascript" src="scripts/jquery.bgiframe.min.js"></script>
<title>新建品牌</title>
</head>
<body>
<div id="body-wrapper">
  <input id="myURL" type="hidden" value="/brands.htm"/>
  #parse("/WEB-INF/manager/menu.vm")
  <div id="main-content">
    <p>后台管理 - 品牌管理 - 新建品牌</p>
    <ul class="shortcut-buttons-set">
      <li><a class="shortcut-button" href="brands.htm"><span><img alt="icon" src="images/menu_return.png"><br />
        返回品牌列表 </span></a></li>
      <li><a class="shortcut-button" href="brand_input.htm"><span><img alt="icon" src="images/pencil_48.png" /><br />
      新建品牌 </span></a></li>
    </ul>
    <div class="clear"></div>
    <div class="content-box">
      <div class="content-box-header">
        <h3>新建品牌</h3>
        <div class="clear"></div>
      </div>
      <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1">
          <form action="brand_create.htm" method="post" enctype="multipart/form-data" name="form1" id="form1">
            <table width="100%" border="0" cellspacing="0" cellpadding="5">
              <tr>
                <td align="right">品牌名称：</td>
                <td><input name="brand.name" type="text" id="brand.name" size="30" maxlength="255" reg="^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]{2,255}$" tip="中文，英文或下划线，最少两个字符，最多255个字符"></td>
              </tr>
              <tr>
                <td align="right">别名：</td>
                <td><input name="brand.alias" type="text" id="brand.alias" size="50" maxlength="255" reg="^$|^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]{2,255}$" tip="中文，英文或下划线，最少两个字符，最多255个字符"></td>
              </tr>
              <tr>
                <td align="right">排序：</td>
                <td><input name="brand.csort" type="text" id="brand.csort" value="10" size="8" maxlength="11" reg="^\d{1,11}$" tip="输入排序，只允许数字。" /></td>
              </tr>
              <tr>
                <td align="right">网址：</td>
                <td><input name="brand.url" type="text" id="brand.url" value="http://" size="50" maxlength="255" reg="^http://[^s]*" tip="网址URL，如：http://www.beautyfamily.com" /></td>
              </tr>
              <tr>
                <td align="right">LOGO：</td>
                <td><input type="file" name="upload" id="upload" reg="^$|.*gif|png|jpg|jpeg$" tip="允许JPG,GIF,PNG图片文件"></td>
              </tr>
              <tr>
                <td align="right">详细介绍：</td>
                <td><textarea name="brand.intro" id="brand.intro" cols="80" rows="15"></textarea></td>
              </tr>
              <tr>
                <td>&nbsp;</td>
                <td><input type="submit" name="button" id="button" value="提交" /></td>
              </tr>
            </table>
          </form>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    #include("/WEB-INF/manager/footer.vm")
  </div>
</div>
</body>
</html>
