<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="styles/global-reset.css" rel="stylesheet" type="text/css" />
<link type="text/css" href="styles/style.css" rel="stylesheet" />
<link href="styles/validate.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="scripts/jquery-1.4.2.min.js"></script>
<script type="text/javascript" src="scripts/simpla.jquery.configuration.js"></script>
<script type="text/javascript" src="scripts/easy_validator.pack.js"></script>
<script type="text/javascript" src="scripts/jquery.bgiframe.min.js"></script>
<script type="text/javascript">
function getDistrict(_id){
	var select = document.createElement("select");
	select.id = "freight.district.id";
	select.name = "freight.district.id";

	jQuery.ajax({
		type: "POST",
		url: "getdistrict.action",
		dataType: "json",
		data: "id="+_id,
		success: function(msg){
			var json = eval(msg.result);
			jQuery.each(json, function(i, n){
				select.options[i] = new Option(n.name, n.id);
			});
		}
	});
	psdiv.innerHTML = "";
	var object = psdiv.appendChild(select);
}

</script>
<title>创建物流公司</title>
</head>
<body>
<div id="body-wrapper">
  <input id="myURL" type="hidden" value="/logistics.htm"/>
  #parse("/WEB-INF/manager/menu.vm")
  <div id="main-content">
    <p>后台管理 - 商店配置 - 物流公司 - 创建物流公司</p>
    <ul class="shortcut-buttons-set">
      <li><a class="shortcut-button" href="logistics.htm"><span><img alt="icon" src="images/menu_return.png"><br />
        返回列表 </span></a></li>
      <li><a class="shortcut-button" href="logistic_input.htm"><span><img alt="icon" src="images/pencil_48.png" /><br />
      新建物流公司 </span></a></li>
    </ul>
    <div class="clear"></div>
    <div class="content-box">
      <div class="content-box-header">
        <h3>创建物流公司</h3>
        <div class="clear"></div>
      </div>
      <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1">
          <form action="logistic_create.action" method="post" enctype="multipart/form-data" name="form1" id="form1">
            <table width="100%" border="0" cellspacing="0" cellpadding="5">
              <tr>
                <td align="right">物流公司名称：</td>
                <td><input name="logistic.name" type="text" id="logistic.name" size="50" maxlength="255" reg="^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]{2,255}$" tip="中文，英文或下划线，最少两个字符，最多255个字符" /></td>
              </tr>
              <tr>
                <td align="right">LOGO：</td>
                <td><input type="file" name="upload" id="upload" reg="^$|.*gif|png|jpg|jpeg$" tip="允许JPG,GIF,PNG图片文件"></td>
              </tr>
              <tr>
                <td align="right">网址：</td>
                <td><input name="logistic.url" type="text" id="logistic.url" size="30" maxlength="255" reg="^$|^http://[^s]*" tip="网址URL，如：http://www.beautyfamily.com" /></td>
              </tr>
              <tr>
                <td align="right">在线下单网址：</td>
                <td><input name="logistic.pourl" type="text" id="logistic.pourl" size="30" maxlength="255" reg="^$|^http://[^s]*" tip="网址URL，如：http://www.beautyfamily.com" /></td>
              </tr>
              <tr>
                <td align="right">排序：</td>
                <td><input name="logistic.csort" type="text" id="logistic.csort" value="10" size="12" maxlength="11" reg="^\d{1,11}$" tip="输入排序，只允许数字。"></td>
              </tr>
              <tr>
                <td align="right">物流公司介绍：</td>
                <td><textarea name="logistic.intro" id="logistic.intro" cols="60" rows="10"></textarea></td>
              </tr>
              <tr>
                <td>&nbsp;</td>
                <td><input type="submit" name="button" id="button" value=" 提 交 " /></td>
              </tr>
            </table>
          </form>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    #include("/WEB-INF/manager/footer.vm")
  </div>
</div>
</body>
</html>
