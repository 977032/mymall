<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<link href="styles/global-reset.css" rel="stylesheet" type="text/css" />
<link type="text/css" href="styles/style.css" rel="stylesheet" />
<link href="styles/validate.css" rel="stylesheet" type="text/css" />
<script type="text/javascript" src="scripts/jquery-1.4.2.min.js"></script>
<script type="text/javascript" src="scripts/simpla.jquery.configuration.js"></script>
<script type="text/javascript" src="scripts/easy_validator.pack.js"></script>
<script type="text/javascript" src="scripts/jquery.bgiframe.min.js"></script>
<title>编辑扩展属性</title>
</head>
<body>
<div id="body-wrapper">
  <input id="myURL" type="hidden" value="/extraattrs.htm"/>
  #parse("/WEB-INF/manager/menu.vm")
  <div id="main-content">
    <p>后台管理 - 商品类型 - 扩展属性 - 编辑属性</p>
    <ul class="shortcut-buttons-set">
      <li><a class="shortcut-button" href="extraattrs.htm"><span><img alt="icon" src="images/menu_return.png"><br />
        返回属性列表 </span></a></li>
      <li><a class="shortcut-button" href="extraattr_input.htm"><span><img alt="icon" src="images/pencil_48.png" /><br />
      新建扩展属性 </span></a></li>
    </ul>
    <div class="clear"></div>
    <div class="content-box">
      <div class="content-box-header">
        <h3>编辑扩展属性</h3>
        <div class="clear"></div>
      </div>
      <div class="content-box-content">
        <div class="tab-content default-tab" id="tab1">
          <form action="extraattr_update.htm" method="post" name="form1" id="form1">
            <table width="100%" border="0" cellspacing="0" cellpadding="5">
              <tr>
                <td align="right">属性名称：</td>
                <td><input name="extraattr.name" type="text" id="extraattr.name" value="$!{extraattr.name}" size="30" maxlength="255" reg="^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]{2,255}$" tip="中文，英文或下划线，最少两个字符，最多255个字符" /></td>
              </tr>
              <tr>
                <td align="right">属性别名：</td>
                <td><input name="extraattr.alias" type="text" id="extraattr.alias" value="$!{extraattr.alias}" size="30" maxlength="255" reg="^(?!_)(?!.*?_$)[a-zA-Z0-9_\u4e00-\u9fa5]{2,255}$" tip="中文，英文或下划线，最少两个字符，最多255个字符" /></td>
              </tr>
              <tr>
                <td align="right">前台列表显示方式：</td>
                <td><select name="extraattr.viewtype" id="extraattr.viewtype">
            <option value="progressive" #if($extraattr.viewtype=="progressive")selected="selected"#end>渐进式筛选</option>
            <option value="dropdown" #if($extraattr.viewtype=="dropdown")selected="selected"#end>下拉式筛选</option>
          </select></td>
              </tr>
              <tr>
                <td align="right">是否显示：</td>
                <td><input name="extraattr.display" type="radio" id="radio" value="yes" #if($extraattr.display=="yes")checked="checked"#end>
            是
            <input type="radio" name="extraattr.display" id="radio" value="no" #if($extraattr.display=="no")checked="checked"#end>
            否</td>
              </tr>
              <tr>
                <td align="right">排序：</td>
                <td><input name="extraattr.csort" type="text" id="extraattr.csort" value="$!{extraattr.csort}" size="10" maxlength="11" reg="^\d{1,11}$" tip="输入排序，只允许数字。" /></td>
              </tr>
              <tr>
                <td>&nbsp;</td>
                <td><input type="submit" name="button" id="button" value="提交" />
                  <input name="extraattr.id" type="hidden" id="extraattr.id" value="$!{extraattr.id}"></td>
              </tr>
            </table>
          </form>
        </div>
      </div>
    </div>
    <div class="clear"></div>
    #include("/WEB-INF/manager/footer.vm")
  </div>
</div>
</body>
</html>
